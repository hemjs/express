{
  "name": "@hemjs/express",
  "version": "0.0.0",
  "description": "Express adapter for Hem framework",
  "author": "Augustus Kamau",
  "license": "MIT",
  "keywords": [
    "hemjs",
    "express",
    "express-adapter"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prerelease": "npm run prebuild && npm run build",
    "release": "release-it"
  },
  "dependencies": {
    "express": "4.18.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@types/express": "4.17.17",
    "@types/jest": "29.4.0",
    "@types/node": "18.14.4",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "release-it": "15.7.0",
    "rimraf": "4.1.3",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  },
  "homepage": "https://github.com/hemjs/express#readme",
  "bugs": {
    "url": "https://github.com/hemjs/express/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemjs/express.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
